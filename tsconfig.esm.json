{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": "./module",
    "outDir": "./dist/esm",
    "declarationDir": "./dist/js",
    "tsBuildInfoFile": "dist/esm.tsbuildinfo",
    "paths": {
      "@console/shared": ["module/ConsoleShared"],
      "@console/shared/*": ["module/ConsoleShared/*"],
      "@console/internal": ["module/ConsoleInternal"],
      "@console/internal/*": ["module/ConsoleInternal/*"]
    },
  },
  "include": [
    "./module/*",
    "./module/**/*"
  ],
  "exclude": [
    "**/**.test.tsx",
    "**/**.test.ts",
    "**/examples/**"
  ]
}
